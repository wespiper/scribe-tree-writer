# Example environment variables for Scribe Tree Writer
# Copy this file to .env and update with your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=scribe_tree_writer
DATABASE_URL=postgresql://postgres:your-secure-password@localhost:5432/scribe_tree_writer

# Redis
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6379

# Security
SECRET_KEY=your-secret-key-min-32-chars
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Environment
ENVIRONMENT=development

# Frontend
VITE_API_URL=http://localhost:8000

# Monitoring (Production)
SENTRY_DSN=your-sentry-dsn

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600

# Session
SESSION_EXPIRE_MINUTES=10080  # 7 days

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.txt,.md,.doc,.docx,.pdf

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
